<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">

    <changeSet author="ypavlov" id="id-add-new-question-type-dynamic-question-table">
        <createTable tableName="dynamic_select_question">
            <column name="dynamic_question_id" type="bigint">
                <constraints primaryKey="true" primaryKeyName="dynamic_question_pk"
                             references="question(question_id)" foreignKeyName="dynamic_question_question_fk"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="ypavlov" id="id-add-new-question-type-dynamic-based-questions-table">
        <createTable tableName="dynamic_select_source_questions">
            <column name="dynamic_question_id" type="bigint">
                <constraints nullable="false"
                             references="dynamic_select_question(dynamic_question_id)" foreignKeyName="dynamic_question_fk"/>
            </column>
            <column name="dynamic_source_stable_id" type="varchar(80)">
                <constraints nullable="false"/>
            </column>
            <column name="display_order" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="ypavlov" id="id-add-new-question-type-dynamic-answer-table">
        <createTable tableName="dynamic_select_answer">
            <column name="answer_id" type="bigint">
                <constraints primaryKey="true" primaryKeyName="dynamic_select_answer_pk"
                             references="answer(answer_id)" foreignKeyName="dynamic_answer_answer_fk" deleteCascade="true"/>
            </column>
            <column name="answer_source_guid" type="varchar(80)"/>
        </createTable>
    </changeSet>

    <changeSet author="ypavlov" id="id-add-new-question-type-to-question_type-table">
        <insert tableName="question_type">
            <column name="question_type_code" value="DYNAMIC_SELECT"/>
        </insert>
    </changeSet>

</databaseChangeLog>
