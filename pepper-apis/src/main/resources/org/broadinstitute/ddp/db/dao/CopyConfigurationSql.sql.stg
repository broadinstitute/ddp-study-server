group CopyConfigurationSql;

insertCompositeCopyConfigPair() ::= <<
insert into composite_copy_configuration_pair
       (copy_configuration_pair_id, source_child_question_stable_code_id, target_child_question_stable_code_id)
values (:pairId, :sourceChildStableCodeId, :targetChildStableCodeId)
>>

insertCompositeCopyConfigPairByQuestionStableIds() ::= <<
insert into composite_copy_configuration_pair
       (copy_configuration_pair_id, source_child_question_stable_code_id, target_child_question_stable_code_id)
values (:pairId,
       (select question_stable_code_id from question_stable_code
         where umbrella_study_id = :studyId and stable_id = :sourceChildStableId),
       (select question_stable_code_id from question_stable_code
         where umbrella_study_id = :studyId and stable_id = :targetChildStableId))
>>
