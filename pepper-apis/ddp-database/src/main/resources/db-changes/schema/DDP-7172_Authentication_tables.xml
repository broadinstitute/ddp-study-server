<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">
    <changeSet id="DDP-7172_user_profile_columns" author="pegah">
        <addColumn tableName="user_profile">
            <column name="phone" type="VARCHAR(15)"></column>
        </addColumn>
        <addColumn tableName="user_profile">
            <column name="email" type="VARCHAR(100)"></column>
        </addColumn>
    </changeSet>
    <changeSet id="DDP-7172_permissions_table" author="pegah">
        <createTable tableName="permissions">
            <column name="permissions_id" type="INT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="VARCHAR(500)">
                <constraints unique="true"/>
            </column>
            <column name="description" type="VARCHAR(2000)"></column>
        </createTable>
    </changeSet>
    <changeSet id="DDP-7172_role_table" author="pegah">
        <createTable tableName="role">
            <column name="role_id" type="INT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="VARCHAR(500)">
                <constraints unique="true"/>
            </column>
            <column name="description" type="VARCHAR(2000)"></column>
            <column name="umbrella_id" type="BIGINT"></column>
        </createTable>
        <addForeignKeyConstraint baseTableName="role"
                                 baseColumnNames="umbrella_id"
                                 constraintName="umbrella_study_umbrella_study_id_fk"
                                 referencedTableName="umbrella"
                                 referencedColumnNames="umbrella_id"/>
    </changeSet>
    <changeSet id="DDP-7172_role_permissions_table" author="pegah">
        <createTable tableName="role_permissions">
            <column name="role_permissions_id" type="INT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="role_id" type="INT"></column>
            <column name="permissions_id" type="INT"></column>
        </createTable>
        <addForeignKeyConstraint baseTableName="role_permissions"
                                 baseColumnNames="role_id"
                                 constraintName="role_permissions_role_id_fk"
                                 referencedTableName="role"
                                 referencedColumnNames="role_id"/>

        <addForeignKeyConstraint baseTableName="role_permissions"
                                 baseColumnNames="permissions_id"
                                 constraintName="role_permissions_permissions_id_fk"
                                 referencedTableName="permissions"
                                 referencedColumnNames="permissions_id"/>
    </changeSet>
    <changeSet id="DDP-7172_user_role_table" author="pegah">
        <createTable tableName="user_role">
            <column name="user_role_id" type="INT" autoIncrement="true">
                <constraints primaryKey="true"></constraints>
            </column>
            <column name="user_id" type="BIGINT"></column>
            <column name="role_id" type="INT"></column>
        </createTable>
        <addForeignKeyConstraint baseTableName="user_role"
                                 baseColumnNames="user_id"
                                 constraintName="user_role_user_id_fk"
                                 referencedTableName="user"
                                 referencedColumnNames="user_id"/>
        <addForeignKeyConstraint baseTableName="user_role"
                                 baseColumnNames="role_id"
                                 constraintName="user_role_role_id_fk"
                                 referencedTableName="role"
                                 referencedColumnNames="role_id"/>
    </changeSet>
    <changeSet id="DDP-7172_user_settings_table" author="pegah">
        <createTable tableName="user_settings">
            <column name="user_settings_id" type="INT" autoIncrement="true">
                <constraints primaryKey="true"></constraints>
            </column>
            <column name="user_id" type="BIGINT"></column>
            <column name="rows_per_page " type="INT"></column>
        </createTable>
        <addForeignKeyConstraint baseTableName="user_settings"
                                 baseColumnNames="user_id"
                                 constraintName="user_settings_user_id_fk"
                                 referencedTableName="user"
                                 referencedColumnNames="user_id"/>
    </changeSet>
</databaseChangeLog>
