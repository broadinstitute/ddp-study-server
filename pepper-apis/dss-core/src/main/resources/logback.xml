<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!-- this filter is here to help prevent sensitive data like PHI from bleeding into stdout -->
        <filter class="org.broadinstitute.ddp.logging.NonSecureFilter" />
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %X{LogBreadCrumb} %X{X-Forwarded-For} C:%X{ClientId} S:%X{UserId} [%thread] %-5level %logger{36} %msg D:%X{GAE_DEPLOYMENT_ID} I:%X{GAE_INSTANCE}%n</pattern>
        </encoder>
    </appender>

    <logger name="org.redisson" level="INFO" additivity="false">
        <appender-ref ref="STDOUT" />
    </logger>

    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
