{{$environment := env "ENVIRONMENT"}}
{{$version := env "VERSION"}}
{{with $response := vault (printf "secret/pepper/%s/%s/atcp/conf" $environment $version)}}
{{with $conf := $response.Data}}

{
  "AUTH0_DOMAIN": "{{$conf.auth0.deployDomain}}",
  "AUTH0_CLIENT_ID": "{{$conf.auth0.deployClientId}}",
  "AUTH0_CLIENT_SECRET": "{{$conf.auth0.deployClientSecret}}",
  "AUTH0_KEYWORD_REPLACE_MAPPINGS": {
  {{if eq $environment "dev"}}
    "LOCALHOST_CALLBACKS": ",http://localhost:4200/auth, http://localhost:4200/login-landing",
    "LOCALHOST_LOGOUTS": ",http://localhost:4200, http://localhost:4200/session-expired, http://localhost:4200/account-activation-required, http://localhost:4200/join-us",
    "LOCALHOST_ORIGINS": ",http://localhost:4200",
  {{else}}
    "LOCALHOST_CALLBACKS": "",
    "LOCALHOST_LOGOUTS": "",
    "LOCALHOST_ORIGINS": "",
  {{end}}
  {{if eq $environment "prod"}}
    "STUDY_EMAIL": "support@atfamilies.org",
  {{else}}
    "STUDY_EMAIL": "atcp@{{$environment}}.datadonationplatform.org",
  {{end}}
    "BASE_URL": "{{$conf.baseWebUrl}}",
    "LOGIN_DOMAIN": "{{$conf.auth0.loginDomain}}",
    "ASSETS_BUCKET": "{{$conf.assetsBucketName}}"
  },
  "AUTH0_ALLOW_DELETE": false,

  "INCLUDED_PROPS": {
  },
  "EXCLUDED_PROPS": {
  },
  "AUTH0_EXCLUDED_RULES": [],
  "AUTH0_EXCLUDED_CLIENTS": [],
  "AUTH0_EXCLUDED_RESOURCE_SERVERS": []
}

{{end}}
{{end}}
